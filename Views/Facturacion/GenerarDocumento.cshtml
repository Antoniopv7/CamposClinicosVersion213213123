@model Gestion_Del_Presupuesto.Models.DocumentoFacturacionViewModel

@{
    ViewData["Title"] = "Generar Documentos para Facturación";
}

<h2>Generar Documentos para Facturación</h2>

<form asp-action="GenerarDocumento">
    <div class="form-group">
        <label>Tipo de Documento</label>
        <select class="form-control" asp-for="TipoDocumento">
            <option value="Factura">Factura</option>
            <option value="Nota de Crédito">Nota de Crédito</option>
            <option value="Nota de Débito">Nota de Débito</option>
        </select>
    </div>
    <div class="form-group">
        <label>Número de Documento</label>
        <input class="form-control" asp-for="NumeroDocumento" />
    </div>
    <div class="form-group">
        <label>Institución</label>
        <input class="form-control" asp-for="Institucion" />
    </div>
    <div class="form-group">
        <label>Monto</label>
        <input class="form-control" asp-for="Monto" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label>Fecha de Emisión</label>
        <input class="form-control" asp-for="FechaEmision" type="date" />
    </div>
    <div class="form-group">
        <label>Descripción</label>
        <textarea class="form-control" asp-for="Descripcion"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Generar Documento</button>
</form>
