@model IEnumerable<Gestion_Del_Presupuesto.Models.Centro_Costo>

@{
    ViewData["Title"] = "Centros de Costos";
}

<h1>Centros de Costos</h1>

<div class="row">
    <div class="col-md-8">
        <table class="table table-striped">
            <thead>
                <tr>
                    <!-- Uso de `model.First()` para las propiedades en DisplayNameFor -->
                    @if (Model != null && Model.Any())
                    {
                        <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.First().PresupuestoAsignado)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Responsable)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Id_Presupuesto)</th>
                    }
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.PresupuestoAsignado)</td>
                        <td>@Html.DisplayFor(modelItem => item.Responsable)</td>
                        <td>@Html.DisplayFor(modelItem => item.Id_Presupuesto)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id_Centro_Costo" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id_Centro_Costo" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id_Centro_Costo" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}



