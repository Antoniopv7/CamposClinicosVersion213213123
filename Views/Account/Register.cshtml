@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@model Gestion_Del_Presupuesto.Models.RegisterViewModel

@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="text-center">
    <h1>Campos Clínicos Universidad Central de Chile</h1> <!-- Encabezado agregado -->
</div>

<div class="register-container">
    <h2>Registro de Usuario</h2>
    <form asp-action="Register" asp-controller="Account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="Contraseña" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar Contraseña" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Registrarse</button>
        <div>
            <a asp-controller="Account" asp-action="Login">¿Ya tienes una cuenta? Inicia Sesión</a>
        </div>
    </form>
</div>




