@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@model Gestion_Del_Presupuesto.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="text-center">
    <h1>Campos Clínicos Universidad Central de Chile</h1> <!-- Encabezado agregado -->
</div>

<div class="login-container">
    <h2>Iniciar Sesión</h2>
    <form asp-action="Login" asp-controller="Account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="Contraseña" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
        <div>
            <a asp-controller="Account" asp-action="Register">Registrarse como nuevo Usuario</a>
        </div>
    </form>
</div>







