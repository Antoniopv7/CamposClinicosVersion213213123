@model Gestion_Del_Presupuesto.Models.Campo_Clinico

@{
    ViewData["Title"] = "Crear Campo Clínico";
}

<h2>Crear Campo Clínico</h2>

<form asp-action="Crear">
    <div class="form-group">
        <label>Nombre</label>
        <input class="form-control" asp-for="Nombre" />
    </div>
    <div class="form-group">
        <label>Ubicación</label>
        <input class="form-control" asp-for="Ubicacion" />
    </div>
    <div class="form-group">
        <label>Tipo</label>
        <select class="form-control" asp-for="Tipo">
            <option value="Hospital">Hospital</option>
            <option value="Centro de Salud">Centro de Salud</option>
            <option value="Clínica">Clínica</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
